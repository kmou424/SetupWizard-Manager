<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:padding="10dp">

	<android.support.v7.widget.CardView
		android:id="@+id/card_view"
		android:layout_gravity="center"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardBackgroundColor="#1C1C1C"
		app:cardCornerRadius="4dp">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical">

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:textSize="18sp"
				android:textColor="#ffffff"
				android:text="提示"
				android:layout_marginTop="5dp"
				android:layout_marginLeft="8dp"
				android:layout_marginBottom="5dp"/>

			<View
				android:layout_height="2dp"
				android:layout_width="match_parent"
				android:background="#F4A7B9"/>

			<TextView
				android:id="@+id/setupwizard_status_summary"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:layout_marginLeft="8dp"
				android:textColor="#ffffff"/>

			<TextView
				android:id="@+id/setupwizard_status_text"
				android:textColor="#ffffff"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_marginTop="15dp"
				android:layout_marginLeft="8dp"/>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal"
				android:gravity="right">

				<Button
					android:id="@+id/setupwizard_refresh"
					android:layout_width="wrap_content"
					style="?android:attr/buttonBarButtonStyle"
					android:layout_height="wrap_content"
					android:layout_marginRight="5dp"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="5dp"
					android:textAllCaps="false"
					android:text="刷新"
					android:textColor="#FFF4A7B9"/>

				<Button
					android:id="@+id/setupwizard_go_info"
					android:layout_width="wrap_content"
					style="?android:attr/buttonBarButtonStyle"
					android:layout_height="wrap_content"
					android:layout_marginRight="5dp"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="5dp"
					android:textAllCaps="false"
					android:text="转到SetupWizard应用信息"
					android:textColor="#FFF4A7B9"/>

			</LinearLayout>

		</LinearLayout>

	</android.support.v7.widget.CardView>

	<android.support.v7.widget.CardView
		android:id="@+id/setupwizard_motion_card"
		android:layout_gravity="center"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		app:cardBackgroundColor="#1C1C1C"
		app:cardCornerRadius="4dp">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical">

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:textSize="18sp"
				android:textColor="#ffffff"
				android:text="操作区"
				android:layout_marginTop="5dp"
				android:layout_marginLeft="8dp"
				android:layout_marginBottom="5dp"/>

			<View
				android:layout_height="2dp"
				android:layout_width="match_parent"
				android:background="#F4A7B9"/>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal">

				<Button
					android:id="@+id/start_setupwizard"
					style="?android:attr/buttonBarButtonStyle"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:textAllCaps="false"
					android:text="进入SetupWizard"
					android:textColor="#FFF4A7B9"/>

			</LinearLayout>

		</LinearLayout>

	</android.support.v7.widget.CardView>

</LinearLayout>

